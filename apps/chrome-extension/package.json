{
  "name": "chrome-extension",
  "version": "0.1.0",
  "private": true,
  "description": "Bondee - browser extension",
  "source": "src/manifest.json",
  "scripts": {
    "generate-icons": "tsx scripts/generate-icons.ts",
    "generate-manifest": "tsx scripts/generate-manifest.ts",
    "prebuild": "npm run generate-icons && cross-env NODE_ENV=production npm run generate-manifest",
    "predev": "npm run generate-icons && cross-env NODE_ENV=development npm run generate-manifest",
    "dev": "parcel watch --cache-dir .parcel-cache",
    "build": "parcel build --cache-dir .parcel-cache",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.16.3",
    "@parcel/transformer-svg-jsx": "^2.16.3",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^9",
    "parcel": "^2.16.3",
    "sharp": "^0.34.5",
    "tsx": "^4.19.2",
    "typescript": "^5"
  },
  "dependencies": {
    "@bondee/branding": "*",
    "@mantine/core": "^8.3.11",
    "@mantine/hooks": "^8.3.11",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "targets": {
    "default": {
      "distDir": "dist"
    }
  }
}
